        <ShellContent ContentTemplate="{DataTemplate views:ColaboradorListPage}" Route="colaboradores" />
    </FlyoutItem>
    
    <FlyoutItem Title="Alunos">
        <!-- Icon="aluno.png" -->
        <FlyoutItem.Icon>
            <FontImageSource FontFamily="MaterialIcons" Glyph="&#xe7fd;" />
